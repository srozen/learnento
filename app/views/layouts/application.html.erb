<!DOCTYPE html>
<html>
<head>
  <title>Learnento</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body ng-app="Learnento">
  <%= render 'layouts/header' %>

  <div class="container">
    <% if notice.present? %>
        <aside class="alert alert-info">
          <%= notice %>
        </aside>
    <% end %>
    <% if alert.present? %>
        <aside class="alert alert-danger">
          <%= alert %>
        </aside>
    <% end %>
    <%= yield %>
  </div>

</body>
</html>
